@model IEnumerable<TypeCountViewModel> 

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Garage 6</h1>
    <p>MVC Garage App for Team 6</p>
    <div class="row">
        <div class="col-4">

            <canvas id="vehicleTypeChard" width="400" height="400">
            </canvas>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script >
        const setupVehicleTypeChart = () => {
            const ctx = document.getElementById("vehicleTypeChard").getContext('2d');
            const data = {
                labels: @Html.Raw(Json.Serialize(Model.Select(v => v.VehicleType.ToString()))),
                datasets: [{
                    label: 'Vehicle Count',
                    data: @Html.Raw(Json.Serialize(Model.Select(v => v.Count))),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.5)',
                        'rgba(54, 162, 235, 0.5)',
                        'rgba(255, 206, 86, 0.5)',
                        'rgba(75, 192, 192, 0.5)',
                        'rgba(153, 102, 255, 0.5)',
                        'rgba(255, 159, 64, 0.5)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            };
            
            const config = {
                type: 'doughnut',
                data: data,
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Distribution of Vehicle Types'
                        }
                    }
                }
            };
            
            new Chart(ctx, config);
        };
        
        document.addEventListener('DOMContentLoaded', setupVehicleTypeChart);
        
    </script>

}

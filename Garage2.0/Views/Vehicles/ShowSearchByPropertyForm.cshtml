<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchByPropertyFormResults" method="post">


            <div class="form-group">
                <label for="VehicleType" class="control-label">Vehicle Type</label>
                <select name="VehicleType" asp-items="Html.GetEnumSelectList<VehicleType>()" class="form-control">

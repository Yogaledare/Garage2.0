                <label for="Brand" class="control-label"></label>
                <input name="Brand" class="form-control" placeholder="Any Brand" />
            </div>
            <div class="form-group">
                <label for="Model" class="control-label"></label>
                <input name="Model" class="form-control" placeholder="Any Model" />
            </div>
            <div class="form-group">
                <label for="NumberOfWheels" class="control-label"></label>
                <input name="NumberOfWheels" class="form-control" placeholder="Any Number of Wheels" />
            </div>
         
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



